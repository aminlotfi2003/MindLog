@page
@model MindLog.WebApp.Pages.Courses.DeletedModel
@{
    ViewData["Title"] = "دوره‌های حذف‌شده";
}

<section class="page-header">
    <div>
        <p class="eyebrow mb-1">آرشیو دوره‌ها</p>
        <h1 class="page-title h4 mb-2">دوره‌های حذف‌شده</h1>
        <p class="page-subtitle">دوره‌های حذف‌شده را مرور و بازیابی کنید.</p>
    </div>
    <a asp-page="Index" class="btn btn-outline-secondary">بازگشت به دوره‌های فعال</a>
</section>

@if (Model.Courses.Count == 0)
{
    <div class="glass-card p-4">دوره حذف‌شده‌ای وجود ندارد.</div>
}
else
{
    <div class="glass-card p-0">
        <table class="table table-hover align-middle mb-0 text-center">
            <thead>
                <tr>
                    <th>پروفایل</th>
                    <th>عنوان دوره</th>
                    <th>تاریخ حذف</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model.Courses)
                {
                    <tr>
                        <td>@course.FullName</td>
                        <td>@course.Title</td>
                        <td>@(course.DeletedAt?.ToString("yyyy/MM/dd") ?? "-")</td>
                        <td class="d-flex justify-content-center gap-2">
                            <a asp-page="DeletedDetails" asp-route-id="@course.Id" class="btn btn-sm btn-outline-secondary">جزئیات</a>
                            <form method="post" asp-page-handler="Restore" asp-route-id="@course.Id" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-primary">بازیابی</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
