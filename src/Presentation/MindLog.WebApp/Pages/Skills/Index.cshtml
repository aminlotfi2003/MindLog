@page
@model MindLog.WebApp.Pages.Skills.IndexModel
@using MindLog.Domain.Enums
@{
    ViewData["Title"] = "مهارت‌ها";
}

<section class="page-header">
    <div>
        <p class="eyebrow mb-1">مهارت‌های حرفه‌ای</p>
        <h1 class="page-title h4 mb-2">فهرست مهارت‌ها</h1>
        <p class="page-subtitle">مرور مهارت‌های فنی و نرم برای هر پروفایل رزومه.</p>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <div class="d-flex gap-2">
            <a asp-page="Create" class="btn btn-primary">ثبت مهارت جدید</a>
            <a asp-page="Deleted" class="btn btn-outline-secondary">حذف‌شده‌ها</a>
        </div>
    }
</section>

@if (Model.Skills.Count == 0)
{
    <div class="glass-card p-4">مهارتی ثبت نشده است.</div>
}
else
{
    <div class="glass-card p-0">
        <table class="table table-hover align-middle mb-0 text-center">
            <thead>
                <tr>
                    <th>پروفایل</th>
                    <th>مهارت</th>
                    <th>سطح</th>
                    <th>دسته‌بندی</th>
                    <th>ترتیب نمایش</th>
                    <th>تاریخ ایجاد</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var skill in Model.Skills)
                {
                    <tr>
                        <td>@skill.FullName</td>
                        <td>@skill.Name</td>
                        <td>@(skill.Level switch
                            {
                                SkillLevel.Beginner => "مبتدی",
                                SkillLevel.Intermediate => "متوسط",
                                SkillLevel.Advanced => "پیشرفته",
                                _ => "خبره"
                            })</td>
                        <td>@(skill.Category switch
                            {
                                SkillCategory.Technical => "فنی",
                                SkillCategory.SoftSkill => "مهارت نرم",
                                SkillCategory.Tooling => "ابزارها",
                                _ => "دانش حوزه"
                            })</td>
                        <td>@skill.SortOrder</td>
                        <td>@skill.CreatedAt.ToString("yyyy/MM/dd")</td>
                        <td class="d-flex justify-content-center gap-2">
                            <a asp-page="Details" asp-route-id="@skill.Id" class="btn btn-sm btn-outline-secondary">جزئیات</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-page="Edit" asp-route-id="@skill.Id" class="btn btn-sm btn-primary">ویرایش</a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@skill.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
