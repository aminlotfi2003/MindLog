@page
@model MindLog.WebApp.Pages.Skills.DeletedModel
@using MindLog.Domain.Enums
@{
    ViewData["Title"] = "مهارت‌های حذف‌شده";
}

<section class="page-header">
    <div>
        <p class="eyebrow mb-1">آرشیو مهارت‌ها</p>
        <h1 class="page-title h4 mb-2">مهارت‌های حذف‌شده</h1>
        <p class="page-subtitle">برای بازیابی مهارت‌های حذف‌شده از این بخش استفاده کنید.</p>
    </div>
    <a asp-page="Index" class="btn btn-outline-secondary">بازگشت به مهارت‌های فعال</a>
</section>

@if (Model.Skills.Count == 0)
{
    <div class="glass-card p-4">مهارت حذف‌شده‌ای وجود ندارد.</div>
}
else
{
    <div class="glass-card p-0">
        <table class="table table-hover align-middle mb-0 text-center">
            <thead>
                <tr>
                    <th>پروفایل</th>
                    <th>مهارت</th>
                    <th>سطح</th>
                    <th>تاریخ حذف</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var skill in Model.Skills)
                {
                    <tr>
                        <td>@skill.FullName</td>
                        <td>@skill.Name</td>
                        <td>@(skill.Level switch
                            {
                                SkillLevel.Beginner => "مبتدی",
                                SkillLevel.Intermediate => "متوسط",
                                SkillLevel.Advanced => "پیشرفته",
                                _ => "خبره"
                            })</td>
                        <td>@(skill.DeletedAt?.ToString("yyyy/MM/dd") ?? "-")</td>
                        <td class="d-flex justify-content-center gap-2">
                            <a asp-page="DeletedDetails" asp-route-id="@skill.Id" class="btn btn-sm btn-outline-secondary">جزئیات</a>
                            <form method="post" asp-page-handler="Restore" asp-route-id="@skill.Id" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-primary">بازیابی</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
