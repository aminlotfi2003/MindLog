<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MindLog</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MindLog.WebApp.styles.css" asp-append-version="true" />
</head>
<body class="app-body">
    <header class="app-header">
        <nav class="navbar navbar-expand-lg navbar-dark app-navbar shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center gap-2" asp-area="" asp-page="/Index">
                    <span class="brand-mark">MindLog</span>
                    <span class="brand-subtitle">کتاب‌نگار هوشمند</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="تغییر منو">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-lg-center gap-2">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">خانه</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Books/Index">کتاب‌ها</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                رزومه
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end text-end">
                                <li><a class="dropdown-item" asp-area="" asp-page="/Profiles/Index">پروفایل‌ها</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/WorkExperiences/Index">سوابق کاری</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Educations/Index">سوابق تحصیلی</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Skills/Index">مهارت‌ها</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Courses/Index">دوره‌ها</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Languages/Index">زبان‌ها</a></li>
                            </ul>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Authors/Index">نویسندگان</a>
                            </li>
                        }
                    </ul>
                    <div class="d-flex align-items-center gap-3">
                        <div class="navbar-text text-light small d-none d-md-block">
                            <span class="badge rounded-pill bg-gradient-primary">نسخه پیش‌نمایش</span>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="btn btn-outline-light btn-sm" asp-page="/Account/LoginHistory">سوابق ورود</a>
                                }
                                <form class="d-inline" method="post" asp-page="/Account/Logout">
                                    <button type="submit" class="btn btn-light btn-sm">خروج</button>
                                </form>
                            }
                            else
                            {
                                <a class="btn btn-outline-light btn-sm" asp-page="/Account/Login">ورود مدیر</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="py-4">
            <div class="content-surface shadow-sm">
                @await Html.PartialAsync("_StatusBanner")
                @RenderBody()
                @await Html.PartialAsync("_UxGuidelines")
            </div>
        </main>
    </div>

    <footer class="app-footer text-muted">
        <div class="container d-flex flex-column flex-md-row align-items-center justify-content-between gap-3">
            <div>
                &copy; 2025 - MindLog | همه حقوق محفوظ است
            </div>
            <div class="d-flex align-items-center gap-3">
                <span class="small text-light">طراحی حرفه‌ای برای خوانندگان فارسی‌زبان</span>
                <a asp-area="" asp-page="/Privacy" class="link-light">قوانین حریم خصوصی</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
