@page
@model MindLog.WebApp.Pages.Languages.CreateModel
@{
    ViewData["Title"] = "ثبت زبان";
}

<section class="page-header">
    <div>
        <p class="eyebrow mb-1">افزودن زبان</p>
        <h1 class="page-title h4 mb-2">ثبت مهارت زبانی جدید</h1>
        <p class="page-subtitle">سطح زبان و گواهی‌های مرتبط را برای رزومه ثبت کنید.</p>
    </div>
    <a asp-page="Index" class="btn btn-outline-secondary">بازگشت به فهرست</a>
</section>

<div class="glass-card p-4">
    <form method="post" class="row g-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-6">
            <label asp-for="Input.ProfileId" class="form-label"></label>
            <select asp-for="Input.ProfileId" asp-items="Model.ProfileOptions" class="form-select">
                <option value="">انتخاب پروفایل...</option>
            </select>
            <span asp-validation-for="Input.ProfileId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Input.Language" class="form-label"></label>
            <input asp-for="Input.Language" class="form-control" placeholder="مثال: انگلیسی" />
            <span asp-validation-for="Input.Language" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Input.Level" class="form-label"></label>
            <select asp-for="Input.Level" asp-items="Model.LevelOptions" class="form-select"></select>
            <span asp-validation-for="Input.Level" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Input.SortOrder" class="form-label"></label>
            <input asp-for="Input.SortOrder" type="number" min="0" class="form-control" />
            <span asp-validation-for="Input.SortOrder" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="Input.Certificate" class="form-label"></label>
            <input asp-for="Input.Certificate" class="form-control" placeholder="مثال: IELTS 7.5" />
            <span asp-validation-for="Input.Certificate" class="text-danger"></span>
        </div>

        <div class="col-12 d-flex gap-2">
            <button type="submit" class="btn btn-primary">ذخیره زبان</button>
            <a asp-page="Index" class="btn btn-outline-secondary">انصراف</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
