@page "{id:guid}"
@model MindLog.WebApp.Pages.Languages.DetailsModel
@using MindLog.Domain.Enums
@{
    ViewData["Title"] = "جزئیات زبان";
}

<section class="page-header">
    <div>
        <p class="eyebrow mb-1">جزئیات زبان</p>
        <h1 class="page-title h4 mb-2">@Model.Language.Language</h1>
        <p class="page-subtitle">سطح زبان و اطلاعات گواهی ثبت‌شده برای این پروفایل.</p>
    </div>
    <div class="d-flex gap-2">
        @if (User.IsInRole("Admin"))
        {
            <a asp-page="Edit" asp-route-id="@Model.Language.Id" class="btn btn-primary">ویرایش</a>
        }
        <a asp-page="Index" class="btn btn-outline-secondary">بازگشت</a>
    </div>
</section>

<div class="glass-card p-4 mb-3">
    <div class="row g-3">
        <div class="col-md-6">
            <p class="mb-1 text-muted">شناسه پروفایل</p>
            <strong>@Model.Language.ProfileId</strong>
        </div>
        <div class="col-md-6">
            <p class="mb-1 text-muted">سطح زبان</p>
            <strong>@(Model.Language.Level switch
                {
                    LanguageLevel.A1 => "A1 - پایه",
                    LanguageLevel.A2 => "A2 - ابتدایی",
                    LanguageLevel.B1 => "B1 - متوسط",
                    LanguageLevel.B2 => "B2 - خوب",
                    LanguageLevel.C1 => "C1 - پیشرفته",
                    LanguageLevel.C2 => "C2 - حرفه‌ای",
                    _ => "زبان مادری"
                })</strong>
        </div>
        <div class="col-md-6">
            <p class="mb-1 text-muted">تاریخ ایجاد</p>
            <strong>@Model.Language.CreatedAt.ToString("yyyy/MM/dd")</strong>
        </div>
        <div class="col-md-6">
            <p class="mb-1 text-muted">آخرین ویرایش</p>
            <strong>@(Model.Language.ModifiedAt?.ToString("yyyy/MM/dd") ?? "-")</strong>
        </div>
        <div class="col-md-6">
            <p class="mb-1 text-muted">ترتیب نمایش</p>
            <strong>@Model.Language.SortOrder</strong>
        </div>
        <div class="col-12">
            <p class="mb-1 text-muted">گواهی یا مدرک</p>
            <strong>@(Model.Language.Certificate ?? "ثبت نشده")</strong>
        </div>
    </div>
</div>
