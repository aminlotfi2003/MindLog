@page
@model MindLog.WebApp.Pages.Books.CreateModel

@{
    ViewData["Title"] = "ثبت کتاب";
}

<section class="page-header">
    <div>
        <p class="eyebrow mb-1">افزودن کتاب تازه</p>
        <h1 class="page-title h4 mb-2">کتاب جدیدی به MindLog اضافه کنید</h1>
        <p class="page-subtitle">همه فیلدها به زبان فارسی و با راهنمای واضح برای ثبت اطلاعات تکمیل شده‌اند.</p>
    </div>
    <a asp-page="Index" class="btn btn-outline-secondary">بازگشت به فهرست</a>
</section>

<div class="glass-card p-4">
    <form method="post" class="row g-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-6">
            <label asp-for="Input.AuthorId" class="form-label"></label>
            <select asp-for="Input.AuthorId" asp-items="Model.AuthorOptions" class="form-select">
                <option value="">انتخاب کنید...</option>
            </select>
            <span asp-validation-for="Input.AuthorId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Input.Title" class="form-label"></label>
            <input asp-for="Input.Title" class="form-control" placeholder="عنوان کامل کتاب" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Input.Slug" class="form-label"></label>
            <input asp-for="Input.Slug" class="form-control" placeholder="نامک یکتا برای آدرس" />
            <span asp-validation-for="Input.Slug" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Input.CoverImagePath" class="form-label"></label>
            <input asp-for="Input.CoverImagePath" class="form-control" placeholder="مثال: /images/covers/book.jpg" />
            <span asp-validation-for="Input.CoverImagePath" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Input.Status" class="form-label"></label>
            <select asp-for="Input.Status" asp-items="Model.StatusOptions" class="form-select"></select>
            <span asp-validation-for="Input.Status" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Input.Category" class="form-label"></label>
            <select asp-for="Input.Category" asp-items="Model.CategoryOptions" class="form-select"></select>
            <span asp-validation-for="Input.Category" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="Input.ShortSummary" class="form-label"></label>
            <textarea asp-for="Input.ShortSummary" class="form-control" rows="2" placeholder="چکیده‌ای کوتاه از کتاب"></textarea>
            <span asp-validation-for="Input.ShortSummary" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="Input.FullReview" class="form-label"></label>
            <textarea asp-for="Input.FullReview" class="form-control" rows="4" placeholder="مرور کامل و یادداشت‌های شما"></textarea>
            <span asp-validation-for="Input.FullReview" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Input.Rating" class="form-label"></label>
            <input asp-for="Input.Rating" class="form-control" type="number" min="1" max="5" />
            <span asp-validation-for="Input.Rating" class="text-danger"></span>
        </div>

        <div class="col-12 d-flex gap-2">
            <button type="submit" class="btn btn-primary">ذخیره کتاب</button>
            <a asp-page="Index" class="btn btn-outline-secondary">انصراف</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}