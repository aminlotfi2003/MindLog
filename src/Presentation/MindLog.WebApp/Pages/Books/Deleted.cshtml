@page
@model MindLog.WebApp.Pages.Books.DeletedModel
@{
    ViewData["Title"] = "کتاب‌های حذف‌شده";
}

<section class="page-header">
    <div>
        <p class="eyebrow mb-1">آرشیو حذف‌شده‌ها</p>
        <h1 class="page-title h4 mb-2">کتاب‌های حذف‌شده</h1>
        <p class="page-subtitle">برای بازگردانی کتاب‌ها از همین بخش اقدام کنید. همه پیام‌ها به فارسی نمایش داده می‌شوند.</p>
    </div>
    <a asp-page="Index" class="btn btn-outline-secondary">بازگشت به کتاب‌های فعال</a>
</section>

@if (Model.Books.Count == 0)
{
    <div class="glass-card p-4">کتابی در حالت حذف‌شده وجود ندارد.</div>
}
else
{
    <div class="glass-card p-0">
        <table class="table table-hover align-middle mb-0 text-center">
            <thead>
                <tr>
                    <th>عنوان</th>
                    <th>نویسنده</th>
                    <th>دسته‌بندی</th>
                    <th>تاریخ حذف</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.Books)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.AuthorName</td>
                        <td>@(book.Category == BookCategory.Technical ? "فنی" : book.Category == BookCategory.NonTechnical ? "غیرفنی" : "متفرقه")</td>
                        <td>@(book.DeletedAt?.ToString() ?? "-")</td>
                        <td class="d-flex justify-content-center gap-2">
                            <a asp-page="DeletedDetails" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">جزئیات</a>
                            <form method="post"
                                  asp-page-handler="Restore"
                                  asp-route-id="@book.Id"
                                  class="d-inline">
                                <button type="submit" class="btn btn-sm btn-primary">بازیابی</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}