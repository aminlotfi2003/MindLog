@page
@model MindLog.WebApp.Pages.Books.IndexModel
@{
    ViewData["Title"] = "کتاب‌ها";
}

<section class="page-header">
    <div>
        <p class="eyebrow mb-1">فهرست کتاب‌ها</p>
        <h1 class="page-title h4 mb-2">کتاب‌های ثبت‌شده در MindLog</h1>
        <p class="page-subtitle">از اینجا کتاب‌های جدید اضافه کنید، جزئیات را ببینید یا به‌راحتی حذف و بازیابی کنید.</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-page="Create" class="btn btn-primary">ثبت کتاب جدید</a>
        <a asp-page="Deleted" class="btn btn-outline-secondary">کتاب‌های حذف‌شده</a>
    </div>
</section>

<div class="glass-card p-0">
    <table class="table table-hover align-middle mb-0 text-center">
        <thead>
            <tr>
                <th>عنوان</th>
                <th>نویسنده</th>
                <th>وضعیت مطالعه</th>
                <th>دسته‌بندی</th>
                <th>امتیاز</th>
                <th>تاریخ ایجاد</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Books)
            {
                <tr>
                    <td>@a.Title</td>
                    <td>@a.AuthorName</td>
                    <td>@(a.Status switch { ReadingStatus.Read => "خوانده‌شده", ReadingStatus.Reading => "در حال مطالعه", _ => "برای مطالعه" })</td>
                    <td>@(a.Category == BookCategory.Technical ? "فنی" : a.Category == BookCategory.NonTechnical ? "غیرفنی" : "متفرقه")</td>
                    <td>@(a.Rating?.ToString() ?? "-")</td>
                    <td>@a.CreatedAt.ToString("yyyy/MM/dd")</td>
                    <td class="d-flex justify-content-center gap-2">
                        <a asp-page="Details" asp-route-id="@a.Id" class="btn btn-sm btn-outline-secondary">جزئیات</a>
                        <a asp-page="Edit" asp-route-id="@a.Id" class="btn btn-sm btn-primary">ویرایش</a>
                        <form method="post"
                              asp-page-handler="Delete"
                              asp-route-id="@a.Id"
                              class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>