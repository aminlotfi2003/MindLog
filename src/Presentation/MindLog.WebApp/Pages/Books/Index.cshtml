@page
@model MindLog.WebApp.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

@if (TempData["ErrorMessage"] is string error)
{
    <div class="alert alert-danger">@error</div>
}
@if (TempData["SuccessMessage"] is string success)
{
    <div class="alert alert-success">@success</div>
}

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Book</a>
    <a asp-page="Deleted" class="btn btn-outline-secondary ms-2">Deleted Books</a>
</p>

<table class="table table-striped table-bordered text-center">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author Name</th>
            <th>Category</th>
            <th>Rating</th>
            <th>CreatedAt</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model.Books)
        {
            <tr>
                <td>@a.Title</td>
                <td>@a.AuthorName</td>
                <td>@a.Category.ToString()</td>
                <td>@a.Rating</td>
                <td>@a.CreatedAt</td>
                <td>
                    <a asp-page="Details" asp-route-id="@a.Id">Details</a> |
                    <a asp-page="Edit" asp-route-id="@a.Id">Edit</a> |

                    <form method="post"
                          asp-page-handler="Delete"
                          asp-route-id="@a.Id"
                          style="display:inline">
                        <button type="submit" class="btn btn-link p-0 m-0 align-baseline">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
