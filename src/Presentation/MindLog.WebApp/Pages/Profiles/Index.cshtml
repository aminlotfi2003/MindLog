@page
@model MindLog.WebApp.Pages.Profiles.IndexModel
@{
    ViewData["Title"] = "پروفایل‌های شخصی";
}

<section class="page-header">
    <div>
        <p class="eyebrow mb-1">مدیریت پروفایل رزومه</p>
        <h1 class="page-title h4 mb-2">پروفایل‌های شخصی ثبت‌شده</h1>
        <p class="page-subtitle">نمای کلی از اطلاعات هویتی و تماس برای آماده‌سازی رزومه حرفه‌ای.</p>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-page="Create" class="btn btn-primary">ایجاد پروفایل جدید</a>
    }
</section>

@if (Model.Profiles.Count == 0)
{
    <div class="glass-card p-4">هنوز پروفایلی ثبت نشده است.</div>
}
else
{
    <div class="glass-card p-0">
        <table class="table table-hover align-middle mb-0 text-center">
            <thead>
                <tr>
                    <th>نام کامل</th>
                    <th>تاریخ تولد</th>
                    <th>ایمیل</th>
                    <th>شماره تماس</th>
                    <th>تاریخ ایجاد</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var profile in Model.Profiles)
                {
                    <tr>
                        <td>@profile.FullName</td>
                        <td>@(profile.BirthDate?.ToString("yyyy/MM/dd") ?? "-")</td>
                        <td>@(profile.Email ?? "-")</td>
                        <td>@(profile.PhoneNumber ?? "-")</td>
                        <td>@profile.CreatedAt.ToString("yyyy/MM/dd")</td>
                        <td class="d-flex justify-content-center gap-2">
                            <a asp-page="Details" asp-route-id="@profile.Id" class="btn btn-sm btn-outline-secondary">جزئیات</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-page="Edit" asp-route-id="@profile.Id" class="btn btn-sm btn-primary">ویرایش</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
