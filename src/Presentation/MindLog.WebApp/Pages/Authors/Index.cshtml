@page
@model MindLog.WebApp.Pages.Authors.IndexModel

@{
    ViewData["Title"] = "نویسندگان";
}

<section class="page-header">
    <div>
        <p class="eyebrow mb-1">فهرست نویسندگان</p>
        <h1 class="page-title h4 mb-2">مدیریت نویسندگان در MindLog</h1>
        <p class="page-subtitle">حذف، ویرایش و مرور نویسندگان با پیام‌های فارسی و ظاهر حرفه‌ای.</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-page="Create" class="btn btn-primary">ایجاد نویسنده جدید</a>
        <a asp-page="Deleted" class="btn btn-outline-secondary">نویسندگان حذف‌شده</a>
    </div>
</section>

<div class="glass-card p-0">
    <table class="table table-hover align-middle mb-0 text-center">
        <thead>
            <tr>
                <th>نام کامل</th>
                <th>تعداد کتاب</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Authors)
            {
                <tr>
                    <td>@($"{a.FirstName} {a.LastName}")</td>
                    <td>@a.BooksCount</td>
                    <td class="d-flex justify-content-center gap-2">
                        <a asp-page="Details" asp-route-id="@a.Id" class="btn btn-sm btn-outline-secondary">جزئیات</a>
                        <a asp-page="Edit" asp-route-id="@a.Id" class="btn btn-sm btn-primary">ویرایش</a>
                        <form method="post"
                              asp-page-handler="Delete"
                              asp-route-id="@a.Id"
                              class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
