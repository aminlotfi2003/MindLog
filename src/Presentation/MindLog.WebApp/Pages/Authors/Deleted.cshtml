@page
@model MindLog.WebApp.Pages.Authors.DeletedModel

@{
    ViewData["Title"] = "نویسندگان حذف‌شده";
}

<section class="page-header">
    <div>
        <p class="eyebrow mb-1">مدیریت بازیابی</p>
        <h1 class="page-title h4 mb-2">نویسندگان حذف‌شده</h1>
        <p class="page-subtitle">هر زمان لازم بود می‌توانید نویسنده را بازگردانید و از پیام‌های فارسی سیستم راهنمایی بگیرید.</p>
    </div>
    <a asp-page="Index" class="btn btn-outline-secondary">بازگشت به نویسندگان فعال</a>
</section>

@if (Model.Authors.Count == 0)
{
    <div class="glass-card p-4">هیچ نویسنده‌ای در حالت حذف‌شده نیست.</div>
}
else
{
    <div class="glass-card p-0">
        <table class="table table-hover align-middle mb-0 text-center">
            <thead>
                <tr>
                    <th>نام کامل</th>
                    <th>تعداد کتاب</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.Authors)
                {
                    <tr>
                        <td>@($"{a.FirstName} {a.LastName}")</td>
                        <td>@a.BooksCount</td>
                        <td class="d-flex justify-content-center gap-2">
                            <a asp-page="DeletedDetails" asp-route-id="@a.Id" class="btn btn-sm btn-outline-secondary">جزئیات</a>
                            <form method="post"
                                  asp-page-handler="Restore"
                                  asp-route-id="@a.Id"
                                  class="d-inline">
                                <button type="submit" class="btn btn-sm btn-primary">بازیابی</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}