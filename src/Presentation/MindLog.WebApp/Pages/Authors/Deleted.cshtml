@page
@model MindLog.WebApp.Pages.Authors.DeletedModel

@{
    ViewData["Title"] = "Deleted Authors";
}

<h1>Deleted Authors</h1>

@if (TempData["ErrorMessage"] is string error)
{
    <div class="alert alert-danger">@error</div>
}
@if (TempData["SuccessMessage"] is string success)
{
    <div class="alert alert-success">@success</div>
}

<p>
    <a asp-page="Index" class="btn btn-secondary">Back to active authors</a>
</p>

@if (Model.Authors.Count == 0)
{
    <p>No deleted authors.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Books</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Authors)
            {
                <tr>
                    <td>@($"{a.FirstName} {a.LastName}")</td>
                    <td>@a.BooksCount</td>
                    <td>
                        <a asp-page="DeletedDetails" asp-route-id="@a.Id">Details</a> |

                        <form method="post"
                              asp-page-handler="Restore"
                              asp-route-id="@a.Id"
                              style="display:inline">
                            <button type="submit" class="btn btn-link p-0 m-0 align-baseline">
                                Restore
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
