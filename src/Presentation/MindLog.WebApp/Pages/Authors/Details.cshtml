@page "{id:guid}"
@model MindLog.WebApp.Pages.Authors.DetailsModel

@{
    ViewData["Title"] = "جزئیات نویسنده";
}

<section class="page-header">
    <div>
        <p class="eyebrow mb-1">نمای کلی نویسنده</p>
        <h1 class="page-title h4 mb-2">@($"{Model.Author.FirstName} {Model.Author.LastName}")</h1>
        <p class="page-subtitle">زمان ایجاد: @Model.Author.CreatedAt | آخرین ویرایش: @(Model.Author.ModifiedAt?.ToString() ?? "-")</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-page="Edit" asp-route-id="@Model.Author.Id" class="btn btn-primary">ویرایش</a>
        <a asp-page="Index" class="btn btn-outline-secondary">بازگشت</a>
    </div>
</section>

<div class="glass-card p-4 mb-4">
    <h2 class="h6 mb-3">کتاب‌ها</h2>
    @if (Model.Author.Books.Count == 0)
    {
        <p class="mb-0">هنوز کتابی برای این نویسنده ثبت نشده است.</p>
    }
    else
    {
        <table class="table table-hover align-middle text-center">
            <thead>
                <tr>
                    <th>عنوان</th>
                    <th>وضعیت مطالعه</th>
                    <th>دسته‌بندی</th>
                    <th>امتیاز</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model.Author.Books)
                {
                    <tr>
                        <td>@b.Title</td>
                        <td>@(b.Status switch { ReadingStatus.Read => "خوانده‌شده", ReadingStatus.Reading => "در حال مطالعه", _ => "برای مطالعه" })</td>
                        <td>@(b.Category == BookCategory.Technical ? "فنی" : b.Category == BookCategory.NonTechnical ? "غیرفنی" : "متفرقه")</td>
                        <td>@(b.Rating?.ToString() ?? "-")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>