@page
@model MindLog.WebApp.Pages.Educations.DeletedModel
@{
    ViewData["Title"] = "سوابق تحصیلی حذف‌شده";
}

<section class="page-header">
    <div>
        <p class="eyebrow mb-1">آرشیو سوابق</p>
        <h1 class="page-title h4 mb-2">سوابق تحصیلی حذف‌شده</h1>
        <p class="page-subtitle">امکان بازگردانی سوابق حذف‌شده و مشاهده جزئیات آن‌ها.</p>
    </div>
    <a asp-page="Index" class="btn btn-outline-secondary">بازگشت به سوابق فعال</a>
</section>

@if (Model.Educations.Count == 0)
{
    <div class="glass-card p-4">سابقه حذف‌شده‌ای وجود ندارد.</div>
}
else
{
    <div class="glass-card p-0">
        <table class="table table-hover align-middle mb-0 text-center">
            <thead>
                <tr>
                    <th>پروفایل</th>
                    <th>مدرک</th>
                    <th>رشته</th>
                    <th>تاریخ حذف</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var education in Model.Educations)
                {
                    <tr>
                        <td>@education.FullName</td>
                        <td>@education.Degree</td>
                        <td>@education.FieldOfStudy</td>
                        <td>@(education.DeletedAt?.ToString("yyyy/MM/dd") ?? "-")</td>
                        <td class="d-flex justify-content-center gap-2">
                            <a asp-page="DeletedDetails" asp-route-id="@education.Id" class="btn btn-sm btn-outline-secondary">جزئیات</a>
                            <form method="post" asp-page-handler="Restore" asp-route-id="@education.Id" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-primary">بازیابی</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
